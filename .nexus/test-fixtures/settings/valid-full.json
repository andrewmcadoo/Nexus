{
  "schema_version": "1.0",
  "permission_mode": "acceptEdits",
  "deny_paths": [
    ".env",
    "secrets/",
    "config/credentials.json"
  ],
  "allow_paths_write": [
    "src/",
    "tests/",
    "docs/"
  ],
  "allow_commands": [
    ["npm", "test"],
    ["npm", "run", "build"],
    ["git", "status"]
  ],
  "ask_commands": [
    ["npm", "install"],
    ["git", "push"]
  ],
  "deny_commands": [
    ["rm", "-rf"],
    ["sudo"]
  ],
  "autopilot": {
    "max_batch_cu": 50,
    "max_batch_steps": 10,
    "auto_approve_patches": false,
    "auto_approve_tests": true,
    "auto_handoffs": false
  }
}
